    <!--单个查询, join连接查询-->
    <select id="getById" parameterType="_int" resultMap="ProductBean">
        select * from  product_ where id = #{id}
    </select>

    <select id="getByCategoryId" parameterType="_int" resultMap="ProductBean">
                select * from product_ p where p.cid = #{cid}
